<ltabbed:LeftTabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agpysha.LefttabbedPage.Demo.Maui.MainPage"
             xmlns:ltabbed="clr-namespace:Plugin.Angpysha.LeftTabbedPage.Shared;assembly=Plugin.Angpysha.LeftTabbedPage"
                        xmlns:local="clr-namespace:Agpysha.LefttabbedPage.Demo.Maui"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ltabbed:LeftTabbedPage.Children>
        <local:PageOne Title="Page 1"/>
        <local:PageTwo Title="Page 2"/>
    </ltabbed:LeftTabbedPage.Children>
    <ltabbed:LeftTabbedPage.TabItemTemplate>
        <DataTemplate>
            <ltabbed:ViewCellEx>
                <Grid RowDefinitions="*,Auto"
                      HeightRequest="64"
                      WidthRequest="64">
                    <Label Text="{Binding Title}"
                           Grid.Row="1"
                           HorizontalOptions="CenterAndExpand"
                           TextColor="Black">
                        <Label.Triggers>
                            <DataTrigger Binding="{Binding Active, Mode=TwoWay}"
                                         Value="True"
                                         TargetType="Label">
                                <Setter Property="TextColor" Value="Red"></Setter>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </ltabbed:ViewCellEx>
        </DataTemplate>
    </ltabbed:LeftTabbedPage.TabItemTemplate>
    <ltabbed:LeftTabbedPage.Header>
        <Grid VerticalOptions="EndAndExpand"
              HorizontalOptions="CenterAndExpand"
              WidthRequest="64"
              HeightRequest="80">
            <Label Text="Test header"></Label>
        </Grid>
    </ltabbed:LeftTabbedPage.Header>
    <ltabbed:LeftTabbedPage.Footer>
        <Grid VerticalOptions="EndAndExpand"
              HorizontalOptions="CenterAndExpand"
              WidthRequest="64"
              HeightRequest="120">
            <Label Text="Test footer"></Label>
        </Grid>
    </ltabbed:LeftTabbedPage.Footer>
